<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>
    <main>
        <section class="writting-section">
            <h1 class="heading">Write your own blog here...</h1>
            <a class="new" href="/new">New Post</a>
        </section>
        <section class="content-section">
            <ul>
                <% content.forEach(post=> { %>
                    <li class="items">
                        <h2 class="title">
                            <%=post.title%>
                        </h2>
                        <small class="date">
                          <%=post.date %>
                        </small>
                        <p class="content">
                          <%=post.content%>
                        </p>
                        <small class="author">By: <%=post.author%> </small>
                        <a class="edit" href="/edit/<%= post.id %>">Edit</a>
                        <a class="delete" href="/delete/<%= post.id %>">Delete</a>
                    </li>
                <% }); %>
            </ul>
        </section>
    </main>
</body>
</html>